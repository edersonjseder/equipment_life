<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_equipment_life"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/list_background_color"
    tools:openDrawer="start">

    <View
        android:id="@+id/camera_equipment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/theme_primary_dark" />

    <FrameLayout
        android:id="@+id/frame_equipment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_equipment_life"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:alpha="0.9"
        android:background="@color/theme_primary"
        app:itemTextColor="@color/white_text_color"
        app:headerLayout="@layout/nav_bar_header_drawer_menu"
        app:menu="@menu/profile_options_menu" >

        <TextView
            android:layout_gravity="top"
            android:id="@+id/text_view_equipment_nav_menu"
            style="@style/nav_text_equipment_menu_drawer"
            android:text="@string/owner_email_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"/>

        <View
            android:id="@+id/view_owner_name_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            android:layout_marginTop="185dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>