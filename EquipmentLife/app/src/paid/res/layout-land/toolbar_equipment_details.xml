<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_equipment_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_primary_dark"
    android:minHeight="?attr/actionBarSize">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/toolbar_padding_end"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_equipment_details_toolbar_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:text="@string/equipment_detail_toolbar_title_label"
                style="@style/ThemeToolbarTitle" />

            <!-- A small divider -->
            <View
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/image_btn_equipment_details_edit"
                android:clickable="true"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="15dp"
                android:src="@drawable/icon_edit"
                android:background="@color/theme_primary_dark"
                android:contentDescription="@string/action_edit_equipment_details"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.Toolbar>