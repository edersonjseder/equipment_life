    <style name="NavBarStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/menu_transparent</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="ThemeLifeCam.Sharing">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/theme_accent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/sharing_shared_element_enter
        </item>
    </style>

    <style name="ThemeEquipmentEmptyListText">
        <item name="android:textColor">@color/colorBack</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">@dimen/detail_text_margin_left</item>
    </style>

    <style name="dividerBase">
        <item name="android:background">?android:attr/listDivider</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="dividerVertical" parent="dividerBase">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:background">@color/white_text_color</item>
        <item name="android:layout_marginTop">94dp</item>
        <item name="android:layout_marginStart">330dp</item>
    </style>

    <style name="dividerVerticalListItem" parent="dividerBase">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/view_divider</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="TextContents">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="ThemeToolbarTitle">
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextLabels">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="SerialSearchTextLabels">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="SerialSearchTextMessage">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/clear_red</item>
    </style>

    <style name="SerialSearchTextMessageRegistered">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/yellow_text_color</item>
    </style>

    <style name="TextContentsNotEditable">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <!-- Style for radio button -->
    <style name="EditTextStyleWhite" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/white_text_color</item>
    </style>

    <style name="StyleDialogGoogleLoginText">
        <item name="android:textColor">@color/btn_cancel_color</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_btn_cancel_dialog_google</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="StyleEquipmentChooseButtonText">
        <item name="android:textColor">@color/white_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

