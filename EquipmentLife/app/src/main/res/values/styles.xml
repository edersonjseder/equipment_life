<resources>

    <!-- Base application theme. -->
    <style name="ThemeLifeCam" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <!-- android:textColorSecondary is the color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/white_text_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>

        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>

        <item name="android:fitsSystemWindows">true</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Animation for equipment registration click -->
    <style name="ThemeLifeCam.Red" parent="ThemeLifeCam">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/theme_accent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- <item name="android:windowEnterTransition">@transition/detail_enter</item> -->
        <item name="android:windowExitTransition">@transition/registration_exit</item>
    </style>

    <!-- Animation for list item click -->
    <style name="ThemeLifeCam.Main" parent="ThemeLifeCam">
        <item name="android:windowExitTransition">@transition/main_exit</item>
        <item name="android:windowReenterTransition">@transition/main_reenter</item>
    </style>
